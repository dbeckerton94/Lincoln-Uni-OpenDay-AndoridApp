<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginScreen"
    android:background="#747678"
    android:id="@+id/meallayout2">

    <Button
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/Bsignup"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Blogin"
        android:layout_marginBottom="49dp"
        android:layout_alignEnd="@+id/Blogin"
        android:layout_x="91dp"
        android:layout_y="398dp"
        android:contextClickable="false"
        android:onClick="onButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp"
        android:layout_x="0dp"
        android:layout_y="229dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="295dp" />

    <Button
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Blogin"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/Bsignup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_x="91dp"
        android:layout_y="337dp"
        android:onClick="onButtonClick" />

    <EditText
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpassword"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_x="91dp"
        android:layout_y="279dp" />

    <EditText
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:id="@+id/TFusername"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/TFpassword"
        android:layout_toEndOf="@+id/imageView"
        android:layout_x="91dp"
        android:layout_y="219dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Username/Password"
        android:id="@+id/forgotpass"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/TFpassword"
        android:layout_x="80dp"
        android:layout_y="467dp"
        android:onClick="onButtonClick" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_x="80dp"
        android:layout_y="0dp"
        android:background="@drawable/logo" />

</AbsoluteLayout>
