<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.computing.lincolnopenday.Register"
    android:background="#747678">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_x="84dp"
        android:layout_y="0dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView6"
        android:layout_x="0dp"
        android:layout_y="275dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Full Name:"
        android:id="@+id/textView7"
        android:layout_x="0dp"
        android:layout_y="230dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/textView8"
        android:layout_x="4dp"
        android:layout_y="332dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textView9"
        android:layout_x="0dp"
        android:layout_y="377dp" />

    <EditText
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/Inputname"
        android:layout_x="91dp"
        android:layout_y="215dp" />

    <EditText
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/Inputusername"
        android:layout_x="91dp"
        android:layout_y="267dp" />

    <EditText
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/Inputemail"
        android:layout_x="91dp"
        android:layout_y="314dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Inputpassword1"
        android:layout_x="91dp"
        android:layout_y="365dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Pass:"
        android:id="@+id/textView10"
        android:layout_x="0dp"
        android:layout_y="433dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Inputpassword2"
        android:layout_x="115dp"
        android:layout_y="423dp" />

    <Button
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/ButtonSignup"
        android:layout_x="122dp"
        android:layout_y="495dp"
        android:onClick="onSignUpClick" />

</AbsoluteLayout>
