<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.computing.lincolnopenday.MainActivity"
    android:background="#747678"
    android:id="@+id/meallayout1">

    <Button android:id="@+id/scan_button"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:layout_marginBottom="136dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_x="113dp"
        android:layout_y="494dp" />

    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_button"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/scan_content"
        android:layout_width="177dp"
        android:layout_height="58dp"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_format"
        android:layout_x="5dp"
        android:layout_y="24dp"
        android:text="Hello"
        android:textColor="#f31212"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost on Campus? Please Simply Click the Scan Button below, From this simply use your phones camera to  scan the closest building with a QR code."
        android:id="@+id/textView18"
        android:layout_x="0dp"
        android:layout_y="165dp" />

    <ImageView
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:id="@+id/imageView7"
        android:layout_x="99dp"
        android:layout_y="0dp"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="372dp"
        android:layout_height="212dp"
        android:id="@+id/imageView8"
        android:layout_x="-4dp"
        android:layout_y="231dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/colourb"
        android:layout_x="289dp"
        android:layout_y="34dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_x="0dp"
        android:layout_y="462dp" />


</AbsoluteLayout>
